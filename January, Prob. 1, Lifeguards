#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

struct cow{

	int l, r;

};

bool OPP(cow a, cow b) {

	return a.l < b.l;

}

int main() {

    freopen("lifeguards.in", "r", stdin);
    freopen("lifeguards.out", "w", stdout);

	int n;
	cin >> n;
	vector<cow> cows(n);

	for(int i = 0; i < n; i++) {

		cin >> cows[i].l >> cows[i].r;

	}

	sort(cows.begin(), cows.end(), OPP);

	int total = 0;
	int left = 0;
	int right = 0;
	for(int i = 0; i < n; i++) {

		if(cows[i].r > right) {

			left = max(cows[i].l, right);
			right = cows[i].r;
			total += right - left;

		}
		

	}

	cow end;
	end.l = cows[n - 1].r;
	cows.push_back(end);

	int answer = total;
	right = 0;
	for(int i = 0; i < n; i++) {

		int self = min(cows[i + 1].l, cows[i].r) - max(cows[i].l, right);
		answer = min(answer, self);
		right = max(right, cows[i].r);

	}

	cout << total - max(answer, 0) << endl;

}
