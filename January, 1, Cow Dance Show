#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main() {

	freopen("cowdance.in", "r", stdin);
	freopen("cowdance.out", "w", stdout);

	int n, t;
	cin >> n >> t;

	vector<int> cows(n);
	for(int i = 0; i < n; i++) {

		cin >> cows[i];

	}

	int left = 1, right = n;
	int ans = INT_MAX;

	while(left <= right) {

		int mid = left + (right - left) / 2;
		int time = 0, cur = 0;
		priority_queue<int> stage;

		while(cur < n && cur < mid) {

			stage.push(-cows[cur]);
			cur++;

		}

		while(stage.size() > 0) {

			time += max(0, -stage.top() - time);
			stage.pop();
			if(cur < n) {

				stage.push(-(cows[cur] + time));
				cur++;

			}

		}

		if(time > t) {

			left = mid + 1;

		} else {

			right = mid - 1;
			ans = min(ans, mid);

		}

	}

	cout << ans << endl;

}
