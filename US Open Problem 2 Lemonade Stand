#include <bits/stdc++.h>
using namespace std;

bool cmp(int a, int b) {

    return a > b;

}

int main() {

    freopen("lemonade.in", "r", stdin);
    freopen("lemonade.out", "w", stdout);

	int n;
    cin >> n;

    vector<int> cows(n);
    for(int i = 0; i < n; i++) {

        cin >> cows[i];

    }

    sort(cows.begin(), cows.end(), cmp);

    bool works = true;
    int ans = 0;

    for(int i = 0; i < n && works == true; i++) {

        if(cows[i] < i) {

            works = false;

        } else {

            ans++;

        }

    }

    cout << ans;

}
