#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main() {

	freopen("convention.in", "r", stdin);
	freopen("convention.out", "w", stdout);

	int n, m, c;
	cin >> n >> m >> c;

	vector<int> cows(n);
	for(int i = 0; i < n; i++) {

		cin >> cows[i];
		
	}
	sort(cows.begin(), cows.end());

	int left = 0, right = cows[n - 1] - cows[0];
	while(left < right) {

		int buses = 0, cow = 0, earliest = 0;
		int mid = left + (right - left) / 2;

		while(cow < n) {

			if(cow == earliest) {

				buses++;
				//creating new bus
			}

			if(cows[cow] - cows[earliest] > mid) {

				//doesn't fit restraint
				earliest = cow;
				//go on to the next loop to create another bus

			} else if(cow - earliest + 1 == c) {

				earliest = cow + 1;
				cow++;

			} else {

				cow++;

			}

		}

		if(buses <= m) {

			right = mid;

		} else {

			left = mid + 1;

		}

	}

	cout << left << endl;

}
