#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main() {

	freopen("highcard.in", "r", stdin);
	freopen("highcard.out", "w", stdout);

	int n;
	cin >> n;

	map<int, int> insert;
	int temp;
	for(int i = 0; i < n; i++) {

		cin >> temp;
		insert[temp] = 1;

	}

	vector<int> bessie, elsie;
	for(int i = 1; i <= 2 * n; i++) {

		if(insert[i] == 1) {

			elsie.push_back(i);

		} else {

			bessie.push_back(i);

		}

	}

	int b = 0;
	int e = 0;
	int ans = 0;
	while(b < n && e < n) {

		if(elsie[e] < bessie[b]) {

			ans++;
			b++;
			e++;

		} else {

			b++;

		}

	}

	cout << ans;

}
