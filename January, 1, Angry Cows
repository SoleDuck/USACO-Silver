#include <bits/stdc++.h>
using namespace std;
typedef long long ll;

int main() {

	freopen("angry.in", "r", stdin);
	freopen("angry.out", "w", stdout);

	int n, k;
	cin >> n >> k;

	vector<int> bales(n);
	for(int i = 0; i < n; i++) {

		cin >> bales[i];

	}
	sort(bales.begin(), bales.end());

	int left = 0, right = (bales[n - 1] - bales[0]) / 2 + 1;
	while(left < right) {

		int mid = left + (right - left) / 2;
		int groups = 0, cur = 0, first = 0;

		while(cur < n) {

			if(bales[cur] - bales[first] <= 2 * mid) {

				if(cur == n - 1) {

					groups++;

				}
				cur++;

			} else {

				groups++;
				first = cur;

			}

		}

		if(groups <= k) {

			right = mid;

		} else {

			left = mid + 1;

		}

	}

	cout << left << endl;

}
